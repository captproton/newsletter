<!DOCTYPE html>
<html>
  <head>
    <title>Dummy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <p class="notice"><%= notice %> </p>
    <p class="alert"><%= alert %> </p>
    <% if user_signed_in? %>
      <%= link_to  "Newsletter", 
      "/newsletter" %>
    <% else %>  
      <%= link_to  "Sign In", "users/sign_in" %>
    <% end %>
    <%= yield %>
  </body>
</html>
